@model IEnumerable<Device_management_software.Models.Dtos.Responses.Device.DeviceResponse>

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <form method="get" action="@Url.Action("Index", "Devices")">
        <input type="text" name="searchTerm" placeholder="Search by name or code" value="@ViewBag.SearchTerm" />
        <select name="categoryId">
            <option value="">-- Select Category --</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Value">
                    @category.Text
                </option>
            }
        </select>

        <select name="statusValue">
            <option value="">-- Select Status --</option>
            @foreach (var status in ViewBag.StatusList)
            {
                <option value="@status.Value">
                    @status.Text
                </option>
            }
        </select>
        <button type="submit">Search</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

